---
// Importa los componentes necesarios
import SobreMi from "../sections/SobreMi.astro";
import ContactForm from "./ContactForm.astro";
---



  <!-- Footer -->
  <footer class="h-auto w-full p-10 flex justify-center bg-[#1a1a1a] flex-col gap-10 items-center container m-auto mt-24">

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full px-4 md:px-0">
      <div class="space-y-4">
        <h2 class="text-3xl font-semibold text-white">Bernardo Peredo.</h2>
        <p class="text-lg text-gray-300">
          Proporcionando soluciones digitales innovadoras para tu negocio.
        </p>
      </div>



      <!-- Sección de Redes Sociales -->
      <div class="space-y-4">
        <h3 class="text-xl font-semibold text-white">Síguenos</h3>
        <div class="flex gap-6 text-2xl text-gray-300">
          <a href="https://mail.google.com/mail/u/0/?hl=es#inbox" class="hover:text-green-400 transition-colors duration-300">
            <i class="fa-solid fa-envelope"></i>
          </a>
          <a href="https://github.com/BernardoPer19" class="hover:text-green-400 transition-colors duration-300">
            <i class="fab fa-github"></i>
          </a>
          <a href="" class="hover:text-red-400 transition-colors duration-300">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="https://www.instagram.com/b.eww_/" class="hover:text-green-400 transition-colors duration-300">
            <i class="fab fa-instagram"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Sección de Copyright -->
    <div class="mt-8 text-center text-sm text-gray-400">
      <p>© 2025 Bernardo Peredo. Todos los derechos reservados.</p>
    </div>
  </footer>
