---
// Importa los componentes necesarios
import SobreMi from "../sections/SobreMi.astro";
import ContactForm from "./ContactForm.astro";
---

<div class="flex flex-col h-[50vh] bg-[#1a1a1a] mt-16">

  <!-- Sección SobreMi -->
  <!-- <SobreMi /> -->
  <!-- <ContactForm/> -->

  <!-- Footer -->
  <footer class="h-auto w-full flex justify-center flex-col gap-10 items-center container m-auto mt-24">

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full px-4 md:px-0">
      <!-- Sección de Información -->
      <div class="space-y-4">
        <h2 class="text-3xl font-semibold text-white">Mi Empresa</h2>
        <p class="text-lg text-gray-300">
          Proporcionando soluciones digitales innovadoras para tu negocio.
        </p>
      </div>

      <!-- Sección de Enlaces -->
      <div class="space-y-4">
        <h3 class="text-xl font-semibold text-white">Enlaces Rápidos</h3>
        <ul class="space-y-2 text-gray-300">
          <li><a href="#" class="hover:text-green-400 transition-colors duration-300">Inicio</a></li>
          <li><a href="#" class="hover:text-green-400 transition-colors duration-300">Servicios</a></li>
          <li><a href="#" class="hover:text-green-400 transition-colors duration-300">Sobre Nosotros</a></li>
          <li><a href="#" class="hover:text-green-400 transition-colors duration-300">Contacto</a></li>
        </ul>
      </div>

      <!-- Sección de Redes Sociales -->
      <div class="space-y-4">
        <h3 class="text-xl font-semibold text-white">Síguenos</h3>
        <div class="flex gap-6 text-2xl text-gray-300">
          <a href="#" class="hover:text-green-400 transition-colors duration-300">
            <i class="fab fa-facebook"></i>
          </a>
          <a href="#" class="hover:text-green-400 transition-colors duration-300">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="hover:text-green-400 transition-colors duration-300">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="#" class="hover:text-green-400 transition-colors duration-300">
            <i class="fab fa-instagram"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Sección de Copyright -->
    <div class="mt-8 text-center text-sm text-gray-400">
      <p>© 2025 Mi Empresa. Todos los derechos reservados.</p>
    </div>
  </footer>
</div>
